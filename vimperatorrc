" so that it works on windows
set runtimepath=~/.vimperator

set hintchars='asdflkjhgqweroiupzxcvmnbty'
set titlestring=Mozilla\ Firefox
set wildmode=list:longest,full

set noerrorbells
set novisualbell

colorscheme vimium

command! -nargs=0 SlapWrist :echoerr "NO!!!"

nmap w      :SlapWrist<CR>
nmap d      :SlapWrist<CR>
nmap u      :SlapWrist<CR>
nmap <C-t>  :SlapWrist<CR>

nmap d <C-d>
nmap u <C-u>
nmap j 3<Down>
nmap k 3<Up>
nmap J :tabprevious<CR>
nmap K :tabnext<CR>
nmap x :quit<CR>
nmap X :undo<CR>
