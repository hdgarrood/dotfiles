" so that it works on windows
set runtimepath=~/.vimperator

set hintkeys='asdflkjhgqweroiupzxcvmnbty'
" set guioptions+=T

set titlestring=Mozilla\ Firefox

" don't need to press enter to follow hints
" set followhints=0

set wildmode=list:longest,full

set hlfind
set incfind
set findcase=smart
set noerrorbells
set novisualbell

colorscheme vimium

nmap w <Nop>
nmap d <Nop>
nmap u <Nop>

nmap d <C-d>
nmap u <C-u>
nmap j 3<Down>
nmap k 3<Up>
nmap J :tabprevious<CR>
nmap K :tabnext<CR>
nmap x :quit<CR>
nmap X :undo<CR>
