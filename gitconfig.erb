[user]
    name = <%= DotfilesConfig['git_username'] %>
    email = <%= DotfilesConfig['git_email'] %>
[alias]
    co = checkout
    st = status
    ci = commit
[color]
    diff = auto
    status = auto
    branch = auto
[core]
    excludesfile = ~/.gitignore
    editor = vim
    autocrlf = input
[pull]
    rebase = true
[push]
    default = simple
[format]
    pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
    user = <%= DotfilesConfig['github_username'] %>
[web]
    browser = chromium-browser
